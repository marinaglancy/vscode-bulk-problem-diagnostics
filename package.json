{
  "name": "open-all-files",
  "displayName": "open-all-files",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscode-open-all-files.openAllFiles"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-open-all-files.openAllFiles",
        "title": "Open all files"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "vscode-open-all-files.openAllFiles",
          "when": "explorerResourceIsFolder",
          "group": "openallfiles"
        }
      ]
    },
    "configuration": {
      "id": "open-all-files",
      "title": "Open All Files",
      "properties": {
        "openAllFiles.maxFiles": {
          "default": 30,
          "description": "Mximum number of files to open in one operation. If the folder has more files, the next command execution will start from it left last time.",
          "type": "number"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  }
}
